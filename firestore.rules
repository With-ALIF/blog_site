rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /posts/{postId} {
      allow get: if resource.data.status == 'published' || isSignedIn();
      allow list: if true;
      allow write: if isSignedIn();

      match /comments/{commentId} {
        allow read: if true;
        allow create: if true;
        allow delete: if isSignedIn();
      }
    }

    // This rule is specifically for the collection group query in the admin panel.
    // Granting 'read' (get + list) to signed-in users for the collection group
    // query resolves subtle permission evaluation issues.
    match /{path=**}/comments/{commentId} {
      allow read: if isSignedIn();
    }
  }
}
